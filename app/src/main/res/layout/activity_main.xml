<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leandrozlotnik.pickateam.MainActivity">

 <LinearLayout
     android:orientation="vertical"
     android:background="@mipmap/mainback"
     android:layout_width="368dp"
     android:layout_height="495dp"
     tools:layout_editor_absoluteY="8dp"
     tools:layout_editor_absoluteX="8dp">

     <TextView
         android:id="@+id/textView"
         android:background="@android:color/darker_gray"
         android:textSize="25dp"
         android:textColor="#000000"
         android:layout_marginTop="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="   Insert Player's Name:   " />

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="100dp">


         <EditText
             android:id="@+id/firstName"
             android:background="#FFFFFF"
             android:hint="   First Name"
             android:textSize="20dp"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="30dp"
             android:layout_width="130dp"
             android:layout_height="wrap_content"/>

         <EditText
             android:id="@+id/lastName"
             android:background="#FFFFFF"
             android:hint="   Last Name"
             android:textSize="20dp"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="30dp"
             android:layout_width="130dp"
             android:layout_height="wrap_content"/>
     </LinearLayout>
     <LinearLayout
         android:background="#AAAAA1"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/attmin"
             android:background="@mipmap/minicon"
             android:layout_marginLeft="25dp"
             android:layout_width="30dp"
             android:layout_height="30dp" />
         <TextView
             android:id="@+id/Att"
             android:text="Att = 0 "
             android:layout_marginLeft="10dp"
             android:textSize="18dp"
             android:textColor="#000000"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <Button
             android:id="@+id/attplus"
             android:background="@mipmap/plusicon"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="30dp"
             android:layout_width="30dp"
             android:layout_height="30dp" />

         <Button
             android:id="@+id/defmin"
             android:background="@mipmap/minicon"
             android:layout_marginLeft="10dp"
             android:layout_width="30dp"
             android:layout_height="30dp" />
         <TextView
             android:id="@+id/Def"
             android:text="Def = 0 "
             android:layout_marginLeft="10dp"
             android:textSize="18dp"
             android:textColor="#000000"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <Button
             android:id="@+id/defplus"
             android:background="@mipmap/plusicon"
             android:layout_marginLeft="10dp"
             android:layout_width="30dp"
             android:layout_height="30dp" />
     </LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <Button
             android:id="@+id/setbutton"
             android:layout_gravity="center"
             android:text="SET"
             android:textSize="20dp"
             android:background="@android:color/holo_red_light"
             android:layout_marginTop="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/nOplayers"
             android:layout_gravity="center"
             android:background="@android:color/darker_gray"
             android:textSize="25dp"
             android:textColor="#000000"
             android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="   Number of players = 0   " />

     </LinearLayout>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_marginTop="90dp"
         android:layout_width="match_parent"
         android:layout_height="100dp">
         <Button
             android:id="@+id/plist"
             android:text="Player List"
             android:background="@android:color/holo_green_dark"
             android:textSize="18dp"
             android:padding="20dp"
             android:layout_marginTop="40dp"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <Button
             android:id="@+id/appInfo"
             android:text="App Info"
             android:background="@android:color/holo_green_dark"
             android:textSize="18dp"
             android:padding="20dp"
             android:layout_marginTop="40dp"
             android:layout_marginLeft="80dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

     </LinearLayout>

 </LinearLayout>

</android.support.constraint.ConstraintLayout>
